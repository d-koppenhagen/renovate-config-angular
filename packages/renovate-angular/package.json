{
  "name": "renovate-config-angular",
  "description": "Angular shareable config for Renovate",
  "version": "0.0.2",
  "author": "Danny Koppenhagen <mail@k9n.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-koppenhagen/renovate-config-angular.git"
  },
  "homepage": "https://github.com/d-koppenhagen/renovate-config-angular/packages/renovate-config-angular#readme",
  "bugs": {
    "url": "https://github.com/d-koppenhagen/renovate-config-angular/issues"
  },
  "files": [],
  "scripts": {
    "test": "npm-run-all --parallel test:*",
    "test:config": "renovate-config-validator"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "renovate": "29.16.1"
  },
  "renovate-config": {
    "default": {
      "ignoreDeps": [
        "@angular/animations",
        "@angular/common",
        "@angular/compiler",
        "@angular/core",
        "@angular/forms",
        "@angular/platform-browser",
        "@angular/platform-browser-dynamic",
        "@angular/router",
        "rxjs",
        "tslib",
        "zone.js",
        "@angular-devkit/build-angular",
        "@angular/cli",
        "@angular/compiler-cli",
        "@types/jasmine",
        "@types/node",
        "jasmine-core",
        "karma",
        "karma-chrome-launcher",
        "karma-coverage",
        "karma-jasmine",
        "karma-jasmine-html-reporter",
        "typescript"
      ],
      "packageRules": [
        {
          "matchPackagePatterns": [
            "^@angular/core$",
            "^@angular/cli$"
          ],
          "groupSlug": "angular",
          "groupName": "angular: ng update",
          "postUpgradeTasks": {
            "commands": [
              "npx @angular/cli@{{{toVersion}}} update @angular/cli @@angular/core --allow-dirty --force"
            ],
            "fileFilters": [
              "**/**"
            ]
          }
        },
        {
          "matchPackagePatterns": [
            "^@angular-eslint/schematics$"
          ],
          "groupSlug": "angular eslint",
          "groupName": "angular eslint dependencies",
          "postUpgradeTasks": {
            "commands": [
              "ng update @angular-eslint/schematics --allow-dirty --force"
            ],
            "fileFilters": [
              "**/**"
            ]
          }
        }
      ]
    }
  }
}
